{{ 'custom-closets.css' | asset_url | stylesheet_tag }}

<!-- Lazzoni Home Page -->
<div class="custom-closets-page">
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-container">
      <div class="hero-image">
        <img src="{{ 'CustomClosetHead.png' | asset_url }}" 
             alt="Lazzoni Custom Closets" />
        <div class="hero-overlay">
          <h1 class="hero-title">Transform Your Space</h1>
          <p class="hero-subtitle">Premium custom closet solutions designed for your lifestyle</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="hero-cta-section">
    <div class="container">
      <a href="/pages/custom-closets" class="cta-button">Explore Our Collections</a>
    </div>
  </section>

  <!-- Featured Section -->
  <section class="closets-section" id="featured">
    <div class="container">
      <div class="section-header">
        <h2>Our Premium Collections</h2>
        <p>Discover the perfect storage solution for every space and style</p>
      </div>
      
      <div class="closets-grid">
        <div class="closet-item">
          <img src="{{ 'CustomClosetImage1.png' | asset_url }}" alt="Custom Closets" />
          <div class="closet-item-content">
            <h3 class="closet-item-title">Custom Closets</h3>
            <p class="closet-item-description">Fully customizable solutions</p>
            <a href="/pages/custom-closets" class="closet-item-button">View Collection</a>
          </div>
        </div>
        <div class="closet-item">
          <img src="{{ 'VertinaGlassClosetImage1.png' | asset_url }}" alt="Glass Closets" />
          <div class="closet-item-content">
            <h3 class="closet-item-title">Glass Closets</h3>
            <p class="closet-item-description">Elegant transparent designs</p>
            <a href="/pages/custom-closets#glass" class="closet-item-button">View Collection</a>
          </div>
        </div>
        <div class="closet-item">
          <img src="{{ 'SpazioOpenClosetImage1.png' | asset_url }}" alt="Walk-in Closets" />
          <div class="closet-item-content">
            <h3 class="closet-item-title">Walk-in Closets</h3>
            <p class="closet-item-description">Spacious open designs</p>
            <a href="/pages/custom-closets#walkin" class="closet-item-button">View Collection</a>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>
